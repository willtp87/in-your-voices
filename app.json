{
  "expo": {
    "name": "In Your Voices",
    "slug": "in-your-voices",
    "scheme": "voices-scheme",
    "platforms": ["ios"],
    "newArchEnabled": true,
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true
      }
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-localization"
    ]
  }
}
